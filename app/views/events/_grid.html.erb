<%= grid(@events_grid) do |g|

  g.column name: 'Start', attribute: 'start_time' do |event|
    event.start_time.strftime('%a %b %e %H:%m%p')
  end

  g.column name: 'Name', attribute: 'name'

  g.column name: 'Description', attribute: 'description'

  g.column name: 'Location', attribute: 'location'

  g.column do |event|
    link_to('Edit', edit_event_path(event))
  end
end -%>